<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10">
        <form action="/create" method="post">
          <input
            class="block outline-none rounded w-full text-white px-5 py-2 bg-zinc-700"
            type="text"
            placeholder="Title goes here.."
            name="title"
          />
          <textarea
            class="block outline-none rounded mt-2 w-full text-white px-5 py-2 bg-zinc-700"
            placeholder="Write your task details here..."
            name="details"
          ></textarea>
          <input
            class="mt-2 text-white rounded bg-blue-600 px-7 py-2"
            type="submit"
            value="Add Task"
          />
        </form>
      </div>
      <div class="tasks flex gap-4 flex-wrap p-10">
        <% if (files.length > 0) { %>
            <% files.forEach(function(val) { %>
                <div class="task min-w-80 px-4 py-5 rounded bg-zinc-800">
                  <h1 class="text-white text-2xl tracking-tighter font-semibold"><%= val %></h1>
                  <div class="mt-3 flex justify-between items-center px-3 py-2">
                    <a class="text-blue-500 inline-block" href="/files/<%= val %>">Read More</a>
                    <a class="text-zinc-500" href="/edit/<%= val %>">Edit Title</a>
                  </div>
                </div>
            <% }); %>
        <% } else { %>
            <h3 class="text-zinc-500">no tasks yet...</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
